      "types": "./dist/index.d.ts"
    },
    "./dist/styles.css": "./dist/calendar-simple.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jaganath-MSJ/CalendarSimple.git"
  },
  "publishConfig": {
