  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "esbuild": "^0.27.2",
    "prettier": "^3.2.5",
    "semantic-release": "^25.0.2",
    "typescript": "^4.9.5",
    "vite": "npm:rolldown-vite@^7.3.1",
    "vite-plugin-dts": "^4.5.4"
  },
